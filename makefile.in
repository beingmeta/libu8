	@(if test "x${GPGID}" = "xnone"; then 			\
	    echo "Skipping GPG signing of debian packages";  	\
	  else debsign -p${GPG} --re-sign -k${GPGID} dist/libu8_@U8VERSION@*.changes; fi) && \
	  touch dist/debs.signed;

