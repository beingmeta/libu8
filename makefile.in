	@(cd staging/libu8_@U8VERSION@; \
	  dpkg-buildpackage -b -us -uc -sa -rfakeroot) && \
	  cp staging/libu8_@U8VERSION@*.gz dist && 	\
	  mv -f staging/libu8*_@U8VERSION@*.* dist && 	\
	  touch dist/debs.built;
