pkgname=libu8
pkgver=2.6.9
pkgrel=@U8PATCHLEVEL@
pkgdesc="UTF-8 string and comptability library"
url="https://libu8.org/"
arch="all"
license="LGPL"
depends="ldns libressl libuuid libressl2.7-libcrypto"
makedepends="util-linux-dev ldns-dev libressl-dev libressl2.7-libcrypto libuuid libc-dev alpine-sdk"
install=""
#subpackages="$pkgname-dev $pkgname-doc"
subpackages=""
source="https://github.com/beingmeta/libu8/archive/@GITBRANCH@.tar.gz"
builddir="libu8-@GITBRANCH@"

build() {
	pwd
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--without-sudo
	make
}

check() {
	cd src/${builddir}
	pwd
	make
}

package() {
	cd src/${builddir}
	make DESTDIR="$pkgdir" SUDO= install
}
