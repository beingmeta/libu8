pkgname=libu8
pkgver=@U8VERSION@
pkgrel=@U8PATCHLEVEL@
pkgdesc="UTF-8 string and comptability library"
url="https://libu8.org/"
arch="all"
license="LGPL"
depends="ldns libressl libuuid libressl2.7-libcrypto"
makedepends="util-linux-dev ldns-dev libressl-dev libressl2.7-libcrypto libuuid libc-dev alpine-sdk"
install=""
subpackages=""
#subpackages="$pkgname-dev $pkgname-doc $pkgname-static"
#depends_dev="$pkgname"
#depends_doc="$pkgname"
source="libu8-@U8VERSION@.tar.gz"
builddir="${srcdir}/libu8"

build() {
#	echo "@build pwd=$(pwd) startdir=${startdir} srcdir=${srcdir} pkgdir=${pkgdir} builddir=${builddir}"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--without-sudo
	make
}

check() {
#	echo "@check pwd=$(pwd) startdir=${startdir} srcdir=${srcdir} pkgdir=${pkgdir} builddir=${builddir}"
	make
}

package() {
#	echo "@package pwd=$(pwd) startdir=${startdir} srcdir=${srcdir} pkgdir=${pkgdir} builddir=${builddir}"
        make DESTDIR="$pkgdir" SUDO= install install-docs
}
